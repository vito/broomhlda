module(HL):
  module(States):
    data(State):
      Continue
      GoTo(@next)
      Pop
      PopNum(@num)
      Push
      DoAll(@states)
      Combined(@matchers)

    class(HL::Lexers::Lexer):
      apply(Continue, _ = []) := nil

      apply((g: GoTo), cs = []) :=
        @state << class matchers fetch(g next) call(cs)

      apply(Push, _ = []) :=
        @state << @state last

      apply(Pop, _ = []) :=
        @state pop

      apply((p: PopNum), _ = []) :=
        @state pop(p num)

      apply((d: DoAll), _ = []) :=
        d each (s): apply(s)

      apply((c: Combined), _ = []) :=
        @state = c flatten + @state
